generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model VoteSession {
  id           Int            @id @default(autoincrement())
  name         String         @unique
  startTime    DateTime
  endTime      DateTime
  candidates   Candidate[]
  GroupCanVote GroupCanVote[]
}

model Candidate {
  id            Int         @id @default(autoincrement())
  name          String
  ballots       Ballot[]
  voteSessionId Int
  voteSession   VoteSession @relation(fields: [voteSessionId], references: [id])
}

model Ballot {
  token       String    @id
  time        DateTime  @default(now())
  candidateId Int
  candidate   Candidate @relation(fields: [candidateId], references: [id])
}

model Voter {
  id           Int            @id
  VoterInGroup VoterInGroup[]
}

model Group {
  id           Int            @id @default(autoincrement())
  name         String         @unique
  GroupCanVote GroupCanVote[]
  VoterInGroup VoterInGroup[]
}

model VoterInGroup {
  voterId Int
  voter   Voter @relation(fields: [voterId], references: [id])

  groupId Int
  group   Group @relation(fields: [groupId], references: [id])

  @@id([voterId, groupId])
}

model GroupCanVote {
  groupId Int
  group   Group @relation(fields: [groupId], references: [id])

  voteSessionId Int
  voteSession   VoteSession @relation(fields: [voteSessionId], references: [id])

  @@id([groupId, voteSessionId])
}

model Admin {
  id Int @id
}
