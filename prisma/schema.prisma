generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bollot {
  id          Int       @id @default(autoincrement())
  token       String    @unique
  vote_time   DateTime  @default(now())
  Candidate   Candidate @relation(fields: [candidateId], references: [id])
  candidateId Int
}

model Candidate {
  id    Int      @id @default(autoincrement())
  name  String?
  votes Bollot[]
}
