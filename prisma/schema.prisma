generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Candidate {
  id     Int      @id @default(autoincrement())
  name   String
  ballot Ballot[]
}

model Ballot {
  id          Int       @id @default(autoincrement())
  token       String    @unique
  time        DateTime  @default(now())
  candidateId Int
  candidate   Candidate @relation(fields: [candidateId], references: [id])
}
