generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model VoteSession {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  startTime  DateTime
  endTime    DateTime
  electionId Int?        @unique
  election   Candidate?  @relation("election", fields: [electionId], references: [id])
  candidates Candidate[] @relation("allCandidates")
}

model Candidate {
  id            Int          @id @default(autoincrement())
  name          String
  ballot        Ballot[]
  VSelection    VoteSession? @relation("election")
  voteSessionId Int
  voteSession   VoteSession  @relation("allCandidates", fields: [voteSessionId], references: [id])
}

model Ballot {
  token       String    @id
  time        DateTime  @default(now())
  candidateId Int
  candidate   Candidate @relation(fields: [candidateId], references: [id])
}

model Admin {
  id Int @id
}
