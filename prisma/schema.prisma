generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model VoteSession {
  id         Int         @id @default(autoincrement())
  name       String
  startTime  DateTime
  endTime    DateTime
  candidates Candidate[]
  groupId    Int
  group      Group       @relation(fields: [groupId], references: [id], onDelete: Cascade)
}

model Candidate {
  id            Int         @id @default(autoincrement())
  name          String
  ballots       Ballot[]
  voteSessionId Int
  voteSession   VoteSession @relation(fields: [voteSessionId], references: [id], onDelete: Cascade)
}

model Ballot {
  token       String    @id
  time        DateTime  @default(now())
  candidateId Int
  candidate   Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)
}

model Voter {
  id           Int            @id
  VoterInGroup VoterInGroup[]
}

model Group {
  id           Int            @id @default(autoincrement())
  name         String         @unique
  VoterInGroup VoterInGroup[]
  VoteSession  VoteSession[]
}

model VoterInGroup {
  voterId Int
  voter   Voter @relation(fields: [voterId], references: [id], onDelete: Cascade)

  groupId Int
  group   Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@id([voterId, groupId])
}

model Admin {
  id Int @id
}
